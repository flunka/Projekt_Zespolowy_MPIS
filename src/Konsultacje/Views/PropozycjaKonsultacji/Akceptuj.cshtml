@model Konsultacje.Models.KonsultacjaViewModel.PropozycjeKonsultacjiViewModel
@{
    ViewData["Title"] = "Akceptuj";
}

<h2>Akceptuj</h2>

<form asp-action="Akceptuj">
    <div class="form-horizontal">
        <h4>Konsultacja</h4>
        <hr />
        <dl class="dl-horizontal">
            @if (User.IsInRole("PracownikUczelni"))
            {
            <dt>
                Student
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DisplayName)
            </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.Temat)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Temat)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Termin)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Termin)
            </dd>
        </dl>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IdStudenta" />
        <input type="hidden" asp-for="IdPracownika" />
        <input type="hidden" asp-for="Temat" />
        <input type="hidden" asp-for="Termin" />
        <div class="form-group">
            <label asp-for="Budynek" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Budynek" class="form-control" />
                <span asp-validation-for="Budynek" class="text-danger" />
            </div>
        </div>             
        <div class="form-group">
            <label asp-for="Sala" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger" />
            </div>
        </div>        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Akceptuj" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

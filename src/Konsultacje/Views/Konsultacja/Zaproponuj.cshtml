@model Konsultacje.Models.KonsultacjaViewModel.PropozycjeKonsultacjiViewModel

@{
    ViewData["Title"] = "Zaproponuj";
}

<h2>Zaproponuj</h2>

<form asp-action="Zaproponuj">
    <div class="form-horizontal">
        <h4>Konsultacja</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Limit" value="1" />
        <div class="form-group">
            <label asp-for="IdPracownika" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdPracownika" class="form-control" asp-items="ViewBag.PracownikUczelniID"></select>
            </div>
        </div>    
        <div class="form-group">
            <label asp-for="Termin" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Termin" class="form-control form_datetime" />
                <span asp-validation-for="Termin" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Temat" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Temat" class="form-control" />
                <span asp-validation-for="Temat" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
          